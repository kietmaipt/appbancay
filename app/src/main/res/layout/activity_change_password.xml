<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/ic_background"
    tools:context=".ChangePassword">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#7CFFFFFF"
        android:orientation="vertical"
        android:padding="30dp">
        <TextView
            android:gravity="center"
            android:text="change pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textSize="35dp"
            android:textColor="#8EF4B0"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/rdtmkcu"
            android:layout_width="379dp"
            android:layout_height="59dp"
            android:hint="mat khau cu"
            android:inputType="text"/>

        <EditText
            android:id="@+id/edtmkm"
            android:layout_width="379dp"
            android:layout_height="59dp"
            android:hint="mat khau moi"
            android:inputType="text"/>

        <EditText
            android:id="@+id/edtmkm1"
            android:layout_width="379dp"
            android:layout_height="59dp"
            android:hint="nhap lai mat khau moi"
            android:inputType="text"/>

        <Button
            android:id="@+id/btnSignup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#8EF4B0"
            android:text="save" />

    </LinearLayout>

</LinearLayout>